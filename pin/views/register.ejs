<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-center bg-cover bg-[url('https://miro.medium.com/v2/resize:fit:1200/1*Nu8dCyByDubPMbCeAPDA6Q.png')] flex items-center justify-center">
  <div class="w-[25vw] bg-white px-10 py-10 rounded-[30px]">
    <div class="flex items-center justify-center">
      <img class="w-10 h-10 mb-2" src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png?20160129083321" alt="">
    </div>
    <h1 class="text-3xl text-center mb-5 capitalize tracking-tighter font-semibold text-zinc-700 leading-none">Create New Account</h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="text" name="username" placeholder="Username">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="text" name="fullname" placeholder="Full Name">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="email" name="email" placeholder="Email">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="number" name="contact" placeholder="Contact">
      <input class="border-2 rounded-md block w-full mt-2 px-3 py-2" type="password" name="password" placeholder="Password">
      <input class="rounded-full block w-full mt-4 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register">
      <p class="text-xs font-semibold text-zinc-700 mt-4 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's <strong>Terms of Service</strong> and acknowledge you've read our <strong> Privacy Policy. Notice at collection.</strong>
      </p>
    </form>
    <a class="inline-block mt-3 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have an account? Login !</a>
  </div>
</div>

<% include ./partials/footer.ejs %>
  
